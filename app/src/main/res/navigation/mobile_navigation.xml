<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_playlist">

    <fragment
        android:id="@+id/navigation_playlist"
        android:name="com.example.reproductormultimedia.ui.playlist.PlaylistFragment"
        android:label="@string/title_playlist"
        tools:layout="@layout/playlist_fragment" />

    <fragment
        android:id="@+id/navigation_music"
        android:name="com.example.reproductormultimedia.ui.music.MusicFragment"
        android:label="@string/title_music"
        tools:layout="@layout/fragment_music" />

    <fragment
        android:id="@+id/navigation_video"
        android:name="com.example.reproductormultimedia.ui.video.VideoFragment"
        android:label="@string/title_video"
        tools:layout="@layout/fragment_video" />

    <fragment
        android:id="@+id/navigation_photo"
        android:name="com.example.reproductormultimedia.ui.photo.PhotoFragment"
        android:label="@string/title_photo"
        tools:layout="@layout/fragment_photo" />
</navigation>